@page "/"

@foreach (var familyMember in _familyMembers)
{
  <FamilyMemberCard FamilyMember="@familyMember" />
}

@code {

  private IEnumerable<FamilyMember> _familyMembers = new List<FamilyMember>();

  [Inject]
  private IFamilyMemberGateway FamilyMemberGateway { get; set; }
  
  protected override async Task OnInitializedAsync()
  {
    _familyMembers = await FamilyMemberGateway.GetAsync(string.Empty);
  }

}